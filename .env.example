# ==============================================================================
# MEXC Sniper Bot - Environment Configuration
# ==============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit real credentials to version control
#
# For cloud agents: This file provides all necessary environment variables
# for automated setup and testing of the MEXC sniper bot system.

# ==============================================================================
# Core AI Integration (Required)
# ==============================================================================
OPENAI_API_KEY="your-openai-api-key-here"
PERPLEXITY_API_KEY="your-perplexity-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
GEMINI_API_KEY="your-gemini-api-key-here"

# ==============================================================================
# Agent Model Configuration
# ==============================================================================
# Primary model for all agents
AGENT_MODEL="gpt-4o"
AGENT_TEMPERATURE="0.2"
AGENT_MAX_TOKENS="3000"

# Fallback model configuration
AGENT_FALLBACK_MODEL="gpt-4o-mini"
AGENT_FALLBACK_TEMPERATURE="0.3"

# Research-specific model
AGENT_RESEARCH_MODEL="gpt-4o"
AGENT_RESEARCH_TEMPERATURE="0.1"
AGENT_RESEARCH_MAX_TOKENS="4000"

# ==============================================================================
# MEXC API Configuration
# ==============================================================================
MEXC_API_KEY="your-mexc-api-key-here"
MEXC_SECRET_KEY="your-mexc-secret-key-here"
MEXC_BASE_URL="https://api.mexc.com"

# MEXC API Performance Settings
MEXC_TIMEOUT="30000"
MEXC_RETRY_COUNT="3"
MEXC_RETRY_DELAY="1000"
MEXC_RATE_LIMIT_DELAY="100"

# ==============================================================================
# Trading Configuration
# ==============================================================================
# Pattern Detection Settings
PATTERN_CONFIDENCE_THRESHOLD="0.7"
PATTERN_RISK_THRESHOLD="0.3"
READY_STATE_PATTERN="sts:2, st:2, tt:4"
ADVANCE_DETECTION_HOURS="3.5"

# Default Trading Settings
DEFAULT_BUY_AMOUNT="100"
MAX_CONCURRENT_POSITIONS="5"
STOP_LOSS_PERCENTAGE="5"

# Take Profit Levels (Default)
TAKE_PROFIT_LEVEL_1="5.0"
TAKE_PROFIT_LEVEL_2="10.0"
TAKE_PROFIT_LEVEL_3="15.0"
TAKE_PROFIT_LEVEL_4="25.0"
DEFAULT_TAKE_PROFIT_LEVEL="2"

# ==============================================================================
# Database Configuration
# ==============================================================================
# SQLite (Development)
DATABASE_URL="sqlite:///./mexc_sniper.db"

# TursoDB (Production - Optional)
# TURSO_DATABASE_URL="your-turso-database-url"
# TURSO_AUTH_TOKEN="your-turso-auth-token"

# ==============================================================================
# Workflow Orchestration (Inngest)
# ==============================================================================
INNGEST_SIGNING_KEY="dev_signing_key_for_local_development"
INNGEST_EVENT_KEY="dev_event_key_for_local_development"

# Production Inngest (if using)
# INNGEST_SIGNING_KEY="signkey-prod-your-production-key"
# INNGEST_EVENT_KEY="your-production-event-key"

# ==============================================================================
# Authentication
# ==============================================================================
AUTH_SECRET="development_auth_secret_change_in_production"

# ==============================================================================
# Monitoring & Polling Configuration
# ==============================================================================
# Calendar polling (seconds)
CALENDAR_POLL_INTERVAL="300"

# Symbol polling (seconds)  
SYMBOLS_POLL_INTERVAL="30"

# Dashboard refresh rate (milliseconds)
DASHBOARD_REFRESH_INTERVAL="10000"

# Pattern analysis frequency (seconds)
PATTERN_ANALYSIS_INTERVAL="60"

# ==============================================================================
# Performance & Caching
# ==============================================================================
# Cache configuration
CACHE_ENABLED="true"
CACHE_PREFIX="mexc-sniper:"
CACHE_TTL="300"

# Redis/Valkey (Optional)
# VALKEY_URL="redis://localhost:6379/0"

# Rate limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="60"

# ==============================================================================
# Development & Debug Settings
# ==============================================================================
# Debug modes
DEBUG_AGENTS="false"
DEBUG_API_CALLS="false"
DEBUG_PATTERN_DETECTION="false"
DEBUG_TRADING_SIGNALS="false"

# Log levels
LOG_LEVEL="info"
LOG_DATABASE_QUERIES="false"

# Development helpers
MOCK_MEXC_API="false"
ENABLE_TEST_MODE="false"
SKIP_API_VALIDATION="false"

# ==============================================================================
# Security Settings
# ==============================================================================
# Master encryption key for sensitive data (REQUIRED - NO DEFAULT!)
# Generate using: openssl rand -base64 32
ENCRYPTION_MASTER_KEY=""

# Optional: Key ID for rotation tracking
# ENCRYPTION_KEY_ID="v1"

# Legacy encryption key (for migration only)
# OLD_ENCRYPTION_KEY=""

# CORS settings
ALLOWED_ORIGINS="http://localhost:3000"

# ==============================================================================
# Notification & Alerting (Optional)
# ==============================================================================
# Email notifications
# SMTP_HOST=""
# SMTP_PORT="587"
# SMTP_USER=""
# SMTP_PASS=""
# NOTIFICATION_EMAIL=""

# Webhook notifications
# DISCORD_WEBHOOK_URL=""
# SLACK_WEBHOOK_URL=""

# ==============================================================================
# Advanced Trading Settings
# ==============================================================================
# Risk management
MAX_DAILY_TRADES="50"
MAX_POSITION_SIZE_USDT="1000"
COOLDOWN_BETWEEN_TRADES="300"

# Market conditions
MIN_VOLUME_THRESHOLD="10000"
MAX_SPREAD_PERCENTAGE="2.0"

# Timing
PRE_LAUNCH_BUFFER_MINUTES="5"
POST_LAUNCH_TIMEOUT_MINUTES="30"

# ==============================================================================
# Feature Flags
# ==============================================================================
ENABLE_AUTO_TRADING="false"
ENABLE_PAPER_TRADING="true"
ENABLE_EMERGENCY_STOP="true"
ENABLE_MULTI_AGENT_MODE="true"
ENABLE_RESEARCH_AGENT="true"

# ==============================================================================
# Analytics & Telemetry
# ==============================================================================
ENABLE_ANALYTICS="true"
ANALYTICS_SAMPLE_RATE="0.1"

# Optional third-party analytics
# POSTHOG_KEY=""
# MIXPANEL_TOKEN=""

# ==============================================================================
# External Services (Optional)
# ==============================================================================
# TradingView integration
# TRADINGVIEW_USERNAME=""
# TRADINGVIEW_PASSWORD=""

# CoinGecko API (for additional price data)
# COINGECKO_API_KEY=""

# ==============================================================================
# Deployment Configuration
# ==============================================================================
# Environment
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Vercel deployment
# VERCEL_URL=""
# VERCEL_ENV=""

# ==============================================================================
# Notes
# ==============================================================================
# 1. All time intervals are in seconds unless specified otherwise
# 2. All monetary amounts are in USDT unless specified otherwise  
# 3. Temperature values should be between 0.0 and 1.0
# 4. Confidence thresholds should be between 0.0 and 1.0
# 5. Always test configuration changes in development first
# 6. Use strong, unique values for production secrets
# 7. Regularly rotate API keys and secrets